{
  "name": "sf2tf",
  "displayName": "Snowflake DDL to Terraform Converter",
  "description": "Convert Snowflake SQL DDL statements to Terraform 0.84 definitions with Azure DevOps pipeline support for tables, views, and stored procedures",
  "version": "0.3.0",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/company/sf2tf.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sf2tf.convertSelection",
        "title": "Convert Selected SQL to Terraform",
        "category": "Snowflake to Terraform"
      },
      {
        "command": "sf2tf.convertFile",
        "title": "Convert Entire File to Terraform",
        "category": "Snowflake to Terraform"
      },
      {
        "command": "sf2tf.previewConversion",
        "title": "Preview Terraform Conversion",
        "category": "Snowflake to Terraform"
      },
      {
        "command": "sf2tf.convertFolder",
        "title": "Convert All SQL Files in Folder to Terraform",
        "category": "Snowflake to Terraform"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && (resourceExtname == .sql || resourceLangId == sql)",
          "command": "sf2tf.convertSelection",
          "group": "1_modification"
        },
        {
          "when": "resourceExtname == .sql || resourceLangId == sql",
          "command": "sf2tf.convertFile",
          "group": "1_modification"
        },
        {
          "when": "editorHasSelection && (resourceExtname == .sql || resourceLangId == sql)",
          "command": "sf2tf.previewConversion",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "sf2tf.convertFolder",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "sf2tf.convertSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "sf2tf.convertFile",
          "when": "editorIsOpen"
        },
        {
          "command": "sf2tf.previewConversion",
          "when": "editorHasSelection"
        },
        {
          "command": "sf2tf.convertFolder",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
